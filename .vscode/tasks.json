{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "go install ${file}",
            "options": {
                "env": {
                    "GOBIN": "${workspaceFolder}/bin"
                }
            },
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}